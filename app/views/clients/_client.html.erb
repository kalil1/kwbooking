<div class="client">
  <p class="name"><%= client_name(client) %></p>
  <p><%= client_email(client) %></p>
  <p><%= client_phone(client) %></p>
  <p><%= pluralize(client.appointment_count, "appointment") %></p>
  <p>Value: <%= client_value(client) %></p>
      <p><%= link_to "Edit", edit_client_path(client), class: "btn btn-secondary" %> <%= link_to "Delete", client, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this client?" } %>   </p>
</div>
