<style media="screen">
  /* generic */

body {
  background-color:#eee;
  color:#444;
  font-family:sans-serif;
}

.list2 ul:nth-child(odd) {
  background-color:#ddd;
}

.list2 ul:nth-child(even) {
  background-color:#fff;
}

.list2  {
  margin:-1em 0 0 50%;
  width:100%;
  height:100%;
  zoom: 200%;

}
/* big */
@media screen and (min-width:600px) {

  .list2 {
    display:table;
    margin:1em;
  }

  .list2 ul {
    display:table-row;
  }

  .list2 ul:first-child li {
    background-color:#444;
    color:#fff;
  }

  .list2 ul > li {
    display:table-cell;
    padding:.5em 1em;
  }

}

/* small */
@media screen and (max-width:599px) {

  .list2 ul {
    border:solid 1px #ccc;
    display:block;
    list2-style:none;
    margin:1em;
    padding:.5em 1em;
  }

  .list2 ul:first-child {
    display:none;
  }

  .list2 ul li {
    display:block;
    font-weight:bold;
    font-size:50px;
    padding:.25em 0;
  }

  .list2 ul:nth-child(odd) > li + li {
    border-top:solid 1px #ccc;
  }

  .list2 ul:nth-child(even) > li + li {
    border-top:solid 1px #eee;
  }

  .list2 ul > li:before {
    color:#000;
    content:attr(data-label);
    display:inline-block;
    font-size:75%;
    text-transform:capitalize;
    vertical-align:top;
    width:50%;
  }

  .list2 p {
    margin:-1em 0 0 50%;
  }

}

/* tiny */
@media screen and (max-width:349px) {

  .list2 ul > li:before {
    display:block;
  }

  .list2 p {
    margin:0;
  }

}

</style>
<div class="list2">
  <ul>
    <li>Name</li>
    <li>Location</li>
    <li>Number</li>
    <li>Time</li>
    <li>Amount</li>
  </ul>
  <% @upcoming_appointments.each do |appointment| %>
  <ul>
    <li data-label="first name"> <%= appointment.client.name%> </li>
    <li data-label="country"> <%= appointment.location.nickname %> </li>
    <li data-label="number"> <%= appointment.client.phone_number %> </li>
    <li data-label="reference"> <%= appointment.appointment_time.strftime('%I:%M %p') %> </li>
    <li data-label="description"> <%= number_to_currency(appointment.price) %>
    </li>
  </ul>
  <% end %>

</div>
